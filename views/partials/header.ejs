    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body class="<%= typeof page !== 'undefined' &&(page === 'login' || page === 'register') ? 'bg' : '' %>  ">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top" id="mainnavbar">
        <a class="navbar-brand" href="/">Ticket Cloud</a>
        <div id="menu" onclick="onClickMenu()">
          <div id="bar1" class="bar"></div>
          <div id="bar2" class="bar"></div>
          <div id="bar3" class="bar"></div>
        </div>
        <div class="ml-auto" id="large-nav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/" class="nav-link">Home</a>
                  </li>
              <% if(!currentUser) { %>
                <li class="nav-item">
                    <a href="/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/register" class="nav-link btn btn-info btn-sm">Sign Up</a>
                </li>
                <% } else { %> <% if(currentUser && currentUser.role === "admin") { %>
                <li class="nav-item">
                    <a href="/support" class="nav-link">Support panel</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a href="/user/<%= currentUser._id %>" class="nav-link">My Tickets</a>
                </li>
                <% } %>
                <li class="nav-item">
                    <a href="/logout" class="nav-link">Logout</a>
                </li>
                <% } %>
            </ul>
        </div>
        <div id="menu-bar">
         
          <ul class="nav" id="nav">
            <li class="nav-item">
              <a href="/" class="nav-link">Home</a>
            </li>
        <% if(!currentUser) { %>
          <li>
              <a href="/login" class="nav-link">Login</a>
          </li>
          <li>
              <a href="/register" class="nav-link">Sign Up</a>
          </li>
          <% } else { %> <% if(currentUser && currentUser.role === "admin") { %>
          <li>
              <a href="/support" class="nav-link">Support panel</a>
          </li>
          <% } else { %>
          <li>
              <a href="/user/<%= currentUser._id %>" class="nav-link">My Tickets</a>
          </li>
          <% } %>
          <li>
              <a href="/logout" class="nav-link">Logout</a>
          </li>
          <% } %>
          </ul>
        </div>
        <div class="menu-bg" id="menu-bg"></div>
    </nav> 
   

    <!-- FLASH MESSAGES -->
    <div class="container mt-3">
      <% if(error && error.length>0){ %>
      <div class="alert alert-danger alert-dismissable fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%=error%>
        </div>
      <% } %>
      <% if(success && success.length>0){ %>
      <div class="alert alert-success alert-dismissable fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%=success%>
        </div>
      <% } %>
    </div>  
    
    <div class="container" id="common-container">
